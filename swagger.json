    "paths": {
        "/users": {
            "post": {
                "tags": ["users"],
                "summary": "Create a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    }
                                }
                            },
                            "example": {
                                "name": "Clark Daves",
                                "email": "example@email.com"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "format": "uuid"
                                        },
                                        "admin": {
                                            "type": "boolean",
                                            "enum": [false, true]
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string",
                                            "format": "email"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    }
                                },
                                "example": {
                                    "id": "111ef766-5c69-4154-91f8-240d2d033fbc",
                                    "admin": false,
                                    "name": "Clark Daves",
                                    "email": "clark.daves@domain.com",
                                    "created_at": "2022-05-03T13:58:12.875Z",
                                    "updated_at": "2022-05-03T13:58:12.875Z"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "User email already exists",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "error": "User email already exists!"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": ["users"],
                "summary": "List all users",
                "description": "__Only users with the `admin` permission are authorized__",
                "parameters": [{
                    "in": "header",
                    "name": "user_id",
                    "schema": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "required": true,
                    "description": "User ID"
                }],
                "responses": {
                    "200": {
                        "description": "Operation completed successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "string",
                                                "format": "uuid"
                                            },
                                            "admin": {
                                                "type": "boolean",
                                                "enum": [false, true]
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "email": {
                                                "type": "string",
                                                "format": "email"
                                            },
                                            "created_at": {
                                                "type": "string",
                                                "format": "date-time"
                                            },
                                            "updated_at": {
                                                "type": "string",
                                                "format": "date-time"
                                            }
                                        }
                                    }
                                },
                                "example": [{
                                        "id": "111ef766-5c69-4154-91f8-240d2d033fbc",
                                        "admin": false,
                                        "name": "Clark Daves",
                                        "email": "clark.daves@domain.com",
                                        "created_at": "2022-05-03T13:58:12.875Z",
                                        "updated_at": "2022-05-03T13:58:12.875Z"
                                    },
                                    {
                                        "id": "02fc9d33-bca8-4335-8626-355d0903d13a",
                                        "admin": true,
                                        "name": "Myke Brown",
                                        "email": "myke.brown@domain.com",
                                        "created_at": "2022-05-03T13:58:12.875Z",
                                        "updated_at": "2022-05-03T13:58:12.875Z"
                                    }
                                ]
                            }
                        }
                    },
                    "400": {
                        "description": "User does not exists or User does not have admin permission",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "error": "User does not exists!"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
